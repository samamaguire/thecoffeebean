				div
					h2 Contact Us
					input(name='email', type='email', required, value='#{coffee.email}')
					input(name='phone', type='tel', required, value='#{coffee.phone}')
				input(type='hidden', name='id' value='#{coffee._id}')
				input(type='submit', value='Update Coffee')
